// Support for all UIAppearance setter methods
// https://gist.github.com/mattt/5135521

UIActivityIndicatorView {
  color: red
}

UIButton {
  content-edge-insets: 1 2 3 4
  title-color yellow
  title-color[state:highlighted] #e3e3e3
  title-color[state:disabled] #e4e4e4
  title-color[state:selected] #e5e5e5

  title-shadow-color[state:highlighted] #e7e7e7
  title-shadow-color[state:disabled] #f4f4f4
  title-shadow-color [state:normal] #e6e6e6
  title-shadow-color[state:selected] #f5f5f5

  background-image [state:normal] bg_button_normal
  background-image [state:highlighted] bg_button_highlighted 15 14 13 12
  background-image[state:disabled] bg_button_disabled
  background-image[state:selected] bg_button_selected
}