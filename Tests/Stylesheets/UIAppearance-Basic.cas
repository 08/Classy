// Support for all UIAppearance methods
// https://gist.github.com/mattt/5135521

UIButton {
  title-color #e2e2e2
  title-color[state:highlighted] #e3e3e3
  title-color[state:disabled] #e4e4e4
  title-color[state:selected] #e5e5e5

  title-shadow #e2e2e2
  title-shadow[state:highlighted] #e3e3e3
  title-shadow[state:disabled] #e4e4e4
  title-shadow[state:selected] #e5e5e5

  background-image bg_button_normal
  background-image [state:highlighted] bg_button_highlighted 15 14 13 12
  background-image[state:disabled] bg_button_disabled
  background-image[state:selected] bg_button_selected
}
